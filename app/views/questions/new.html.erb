<h1>New question</h1>

<%= form_with(model: @question, local: true) do |form| %>
  <p>
    <%= form.label :text_value %><br>
    <%= form.text_field :text_value %>
  </p>

  <%= select_tag "topic", options_for_select([['entertainment' ,1], ['sports', 2]]) %>

  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Back', questions_path %>
